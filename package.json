{
  "name": "jdk-boilerplate",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev --host",
    "start": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "css:build": "sass src/styles:public/assets/css",
    "prepare": "husky install"
  },
  "dependencies": {
    "astro": "2.1.8"
  },
  "devDependencies": {
    "@fancyapps/ui": "5.0.14",
    "@typescript-eslint/parser": "^5.59.9",
    "eslint-plugin-astro": "^0.27.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "prettier-plugin-astro": "^0.10.0",
    "sass": "1.59.3",
    "standard": "17.0.0",
    "stylelint": "^15.7.0",
    "stylelint-config-clean-order": "^5.0.1",
    "stylelint-config-standard-scss": "^9.0.0"
  },
  "eslintConfig": {
    "extends": [
      "./node_modules/standard/eslintrc.json",
      "plugin:astro/recommended"
    ],
    "overrides": [
      {
        "files": [
          "*.astro"
        ],
        "parser": "astro-eslint-parser",
        "parserOptions": {
          "parser": "@typescript-eslint/parser",
          "extraFileExtensions": [
            ".astro"
          ]
        }
      }
    ],
    "rules": {}
  },
  "lint-staged": {
    "src/**/*.{astro}": [
      "prettier --write"
    ],
    "src/**/*.{scss,css,sass}": [
      "stylelint"
    ],
    "*.{js,jsx,ts,tsx}": [
      "prettier-standard --lint --staged"
    ],
    "*.css": "stylelint --fix",
    "*.{js,css,md}": "prettier --write"
  }
}
