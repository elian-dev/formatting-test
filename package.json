{
  "name": "jdk-boilerplate",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev --host",
    "start": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "css:build": "sass src/styles:public/assets/css"
  },
  "dependencies": {
    "astro": "2.1.8"
  },
  "devDependencies": {
    "@fancyapps/ui": "5.0.14",
    "eslint": "^8.42.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "sass": "1.59.3"
  },
  "eslintConfig": {
    "extends": "./node_modules/standard/eslintrc.json"
  },
  "lint-staged": {
    "src/**/*.{astro}": [
      "prettier --write"
    ],
    "src/**/*.scss": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ]
  }
}
